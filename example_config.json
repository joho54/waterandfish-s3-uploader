{
  "video": {
    "target_fps": 30,
    "max_frames": null,
    "video_extensions": [
      ".mp4",
      ".avi",
      ".mov",
      ".mkv",
      ".MP4",
      ".AVI",
      ".MOV",
      ".MKV"
    ],
    "supported_formats": [
      "mp4",
      "avi",
      "mov",
      "mkv"
    ]
  },
  "mediapipe": {
    "model_complexity": 1,
    "static_image_mode": false,
    "smooth_landmarks": true,
    "enable_segmentation": false,
    "smooth_segmentation": true,
    "min_detection_confidence": 0.5,
    "min_tracking_confidence": 0.5
  },
  "output": {
    "compression": true,
    "format": "pkl.gz",
    "naming_convention": "{video_name}_pose_sequence.{ext}"
  },
  "s3": {
    "region": "us-east-1",
    "max_workers": 4,
    "chunk_size": 8388608,
    "overwrite": false,
    "use_multipart": true,
    "multipart_threshold": 104857600
  },
  "performance": {
    "batch_size": 1,
    "memory_limit_gb": 8,
    "cpu_workers": 4,
    "gpu_memory_fraction": 0.8
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_logging": true,
    "log_dir": "logs"
  }
}